<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6D41"
    tools:context=".DangKy">

    <ImageView
        android:layout_width="138dp"
        android:layout_height="132dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="133dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/main_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/cus_bgr_login"
        android:gravity="top|center"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="36dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Mời bạn đăng kí tài khoản"
            android:textColor="@color/blue_A400"
            android:textSize="24sp"
            android:textStyle="bold" />



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="vertical"
            app:hintTextColor="@color/blue_A400">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tài khoản :" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <EditText
                    android:id="@+id/txt_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cus_inputlogin"
                    android:inputType="textPassword"
                    android:paddingHorizontal="12dp"

                    android:hint="Nhập tài khoản" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:hintTextColor="@color/blue_A400">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu :" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <EditText
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cus_inputlogin"
                    android:inputType="textPassword"
                    android:paddingHorizontal="12dp"

                    android:hint="Nhập mật khẩu" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:hintTextColor="@color/blue_A400">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xác nhận mật khẩu :" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutRe_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <EditText
                    android:id="@+id/txt_Re_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cus_inputlogin"
                    android:inputType="textPassword"
                    android:paddingHorizontal="12dp"

                    android:hint="Nhập lại mật khẩu" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>




        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="ĐĂNG KÝ"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="QUAY LẠI"
            android:textColor="@color/light_blue_A400"
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>